{
  "compilerOptions": {
    "target": "ES6",
    "lib": [ "dom", "ES2015"],
    "jsx": "react-jsx",
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true 
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
   "exclude": ["node_modules"]
}
